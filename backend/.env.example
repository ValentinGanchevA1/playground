# =============================================================================
# G88 Backend - Development Environment Variables
# =============================================================================
# Copy this to .env and fill in your local development values
# NEVER commit real credentials to version control
# =============================================================================

# Server
PORT=3001
NODE_ENV=development

# Database (PostgreSQL with PostGIS) - Local Docker
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=g88user
DATABASE_PASSWORD=g88password
DATABASE_NAME=g88db
DATABASE_URL=postgresql://g88user:g88password@localhost:5433/g88db

# Redis - Local Docker
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380

# JWT - Development only (generate real ones for production)
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# Stripe - Use test keys for development
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio (SMS) - Use test credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS S3 (File Storage) - Use dev bucket with limited permissions
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=g88-uploads-dev

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Face Recognition (AWS Rekognition)
AWS_REKOGNITION_COLLECTION_ID=g88-faces-dev
